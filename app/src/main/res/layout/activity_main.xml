<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/display_result"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:hint="Answer="

        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_first"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/display_result"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="Enter first digits"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_second"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/edit_first"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="Enter second digit"
        android:textSize="20sp" />

    <Button
        android:id="@+id/Add"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_second"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Add"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/Subtract"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Add"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Subtract"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/Multiply"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Subtract"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Multiply"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/Divide"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Multiply"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Modulus"
        android:textAllCaps="false" />




</RelativeLayout>